<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleGravity="center"
            app:contentScrim="?attr/colorSurface"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="?attr/colorSurface"
            app:toolbarId="@id/toolbar">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#C5F9F9"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_collapseMode="pin"
                app:titleTextColor="?attr/colorOnSurface" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="125dp"
                android:layout_height="78dp"
                android:layout_marginLeft="285dp"
                android:translationY="5dp"
                app:srcCompat="@drawable/logo" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="208dp"
                android:layout_height="67dp"
                android:layout_marginLeft="12dp"
                android:translationY="12dp"
                app:srcCompat="@drawable/img" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="147dp"
                android:layout_height="333dp"
                android:layout_gravity="center_horizontal"
                android:translationY="80dp"
                app:srcCompat="@drawable/img_1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="261dp"
                android:layout_margin="32dp"
                android:translationY="353dp">

                <TextView
                    android:id="@+id/plant_detail_name"
                    android:layout_width="343dp"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Dog Chow Adultos"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="347dp"
                    android:layout_height="130dp"
                    android:foregroundGravity="center_vertical"
                    android:translationY="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/plant_detail_name">


                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/public_sans_bold"
                        android:text="Descripcion"

                        android:textSize="16dp"
                        android:translationY="0dp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="16dp" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="338dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="-35dp"
                    android:background="@drawable/button_detail_producto"
                    android:text="AÃ±adir al carrito"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/plant_detail_name" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/textView7"
                    app:layout_constraintEnd_toStartOf="@+id/buttonplus"
                    app:layout_constraintStart_toEndOf="@+id/button9"
                    app:layout_constraintTop_toTopOf="@+id/textView7" />

                <Button
                    android:id="@+id/buttonplus"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_plus_and_less"
                    android:text="+"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/plant_detail_name" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="100dp"
                    android:background="@drawable/button_plus_and_less"
                    android:text="-"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/plant_detail_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </LinearLayout>
</layout>
