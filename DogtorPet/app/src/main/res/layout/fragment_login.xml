<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_primary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <RelativeLayout
        android:id="@+id/LoginContainerRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            android:fontFamily="@font/public_sans_bold"
            android:padding="50dp"
            android:text="¿YA TIENES UNA CUENTA?"
            android:textAlignment="center"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/textView3"
            android:layout_below="@id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="105dp"
            android:gravity="center"
            android:text="INICIAR SESION"
            android:textColor="#2AE2E2"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_margin="@dimen/MarginBoxes"

            android:background="@drawable/buttonrounded"
            android:hint="Email"
            android:inputType="textPersonName"
            android:padding="@dimen/PaddingBoxes"
            android:textColor="@color/primaryTextColor"

            />

        <EditText

            android:id="@+id/editTextTextPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextTextPersonName"
            android:layout_margin="@dimen/MarginBoxes"
            android:background="@drawable/buttonrounded"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:outlineAmbientShadowColor="#C4C4C44D"
            android:padding="@dimen/PaddingBoxes"
            android:textColor="@color/primaryTextColor" />

        <TextView
            android:id="@+id/textViewRetrieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextTextPassword2"
            android:layout_marginLeft="33dp"
            android:fontFamily="@font/public_sans_bold"
            android:text="Reestablecer contraseña" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewRetrieve"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="155dp"
            android:background="@drawable/button_rounder_registro"
            android:text="Entrar"
            android:layout_marginBottom="200dp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewRetrieve"
            android:layout_marginLeft="254dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="200dp"
            android:background="@drawable/button_rounder_registro"
            android:text="Registrar" />



    </RelativeLayout>

    </ScrollView>
</RelativeLayout>
